---
import Layout from "@/layouts/Layout.astro";
import ChangePasswordForm from "@/components/auth/ChangePasswordForm"; // .tsx is implicit

// Redirect to login if not authenticated
if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="Zmień Hasło">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-5xl sm:text-6xl font-bold mb-8 text-center text-gray-100 drop-shadow-lg">Zmień swoje hasło</h1>
    <ChangePasswordForm client:load />
    <p class="text-center mt-8">
      <a href="/profile" class="text-blue-600 hover:underline">Wróć do profilu</a>
    </p>
  </div>
</Layout>
